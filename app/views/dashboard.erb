<div class="text-center block-center">
  <h1>Dashboard</h1>
  <div class="container">
    <div class="rows">
      <div class="col-md-4 well col-md-offset-1">
        <h2>Average Age:</h2>
        <h3><%= @avg_age %> years old</h3>
      </div>
      <div class="col-md-4 well col-md-offset-1"  >
        <h2>Hired By Year:</h2>
        <table>
          <thead>
            <tr>
              <th>Year</th>
              <th>Count</th>
            </tr>
          </head>
          <tbody>
            <tr>
              <td><%= @hired_by_year.keys %></td>
              <td><%= @hired_by_year.values %></td>
            </tr>
          </tbody>
      </div>
    </div>
  </div>
</div>
